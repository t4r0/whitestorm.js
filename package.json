{
  "name": "whitestormjs",
  "version": "0.11.0",
  "description": "Framework for developing 3D web apps with physics.",
  "main": "build/whitestorm.js",
  "scripts": {
    "build": "gulp src:build",
    "dev": "gulp dev",
    "test": "gulp test",
    "test:unit": "gulp test:unit",
    "test:benchmark": "gulp test:benchmark",
    "ci-test": "./node_modules/.bin/karma start ./test/karma.unit.conf.js",
    "lint": "gulp src:lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WhitestormJS/whitestorm.js.git"
  },
  "keywords": [
    "three.js",
    "cannon.js",
    "webgl",
    "wagner",
    "api",
    "3d",
    "web",
    "javascript"
  ],
  "author": "Alexander Buzin",
  "license": "CC",
  "bugs": {
    "url": "https://github.com/WhitestormJS/whitestorm.js/issues"
  },
  "homepage": "https://github.com/WhitestormJS/whitestorm.js#readme",
  "dependencies": {
    "minivents": "^2.0.2",
    "stats.js": "^0.16.0",
    "three": "^0.79.0",
    "three-orbit-controls": "^72.0.0",
    "whs-ammo": "^0.0.6"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.11.5",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "babel-preset-es2015-webpack": "^6.4.1",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.8.0",
    "babelify": "^7.3.0",
    "benchmark": "^2.1.0",
    "browserify": "^13.0.1",
    "browserify-shim": "^3.8.12",
    "cli-table": "^0.3.1",
    "del": "^2.2.0",
    "es6-symbol": "^3.1.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-benchmark": "^1.1.1",
    "gulp-browser-basedir": "^1.0.1",
    "gulp-browserify": "^0.5.1",
    "gulp-cached": "^1.1.0",
    "gulp-changed": "^1.3.0",
    "gulp-if": "^2.0.0",
    "gulp-load-plugins": "^1.2.2",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-rollup": "^1.9.0",
    "gulp-sourcemaps": "^2.0.0-alpha",
    "gulp-swig": "^0.8.0",
    "gulp-util": "^3.0.7",
    "gulp-xo": "^0.11.0",
    "happypack": "^2.1.1",
    "karma": "^1.0.0",
    "karma-benchmark-reporter": "^0.1.1",
    "karma-chrome-launcher": "^1.0.1",
    "karma-logcapture-reporter": "0.0.1",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.1.0",
    "karma-requirejs": "^1.0.0",
    "karma-webpack": "^1.7.0",
    "karma-whitestormjs-reporter": "^0.0.6",
    "mocha": "^3.0.2",
    "path": "^0.12.7",
    "requirejs": "^2.2.0",
    "run-sequence": "^1.1.5",
    "stats.js": "^0.16.0",
    "stream-browserify": "^2.0.1",
    "string-replace-loader": "^1.0.2",
    "swig": "^1.4.2",
    "swig-webpack-plugin": "^0.5.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-stream": "^3.2.0",
    "webworkify-webpack": "1.1.2",
    "whs-terrain": "0.0.10",
    "xo": "^0.15.1"
  },
  "xo": {
    "space": 2,
    "esnext": true,
    "envs": [
      "node",
      "browser",
      "es6"
    ],
    "rules": {
      "operator-linebreak": [
        2,
        "before"
      ],
      "curly": [
        2,
        "multi-or-nest"
      ],
      "one-var": 0,
      "no-else-return": 1,
      "no-undef": 0,
      "no-new": 0,
      "camelcase": 0,
      "new-cap": [
        1,
        {
          "newIsCap": true,
          "capIsNew": true,
          "properties": false
        }
      ],
      "babel/new-cap": [
        1,
        {
          "newIsCap": true,
          "capIsNew": true,
          "properties": false
        }
      ],
      "babel/arrow-parens": 0,
      "xo/filename-case": 0
    }
  },
  "eslintConfig": {
    "ecmaFeatures": {
      "modules": true,
      "spread": true,
      "restParams": true
    },
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  }
}
